@model IPasswordViewModel

<div class="form-group row" ng-app="app">
    <label asp-for="Password" class="col-sm-2 control-label"></label>
    <div class="col-sm-10 field-group" ng-controller="PasswordController">
        <div>
            <password-field ng-model="password" />
        </div>
        <div style="display:none;">
            <input type="text" asp-for="Password" ng-model="password" />
        </div>
        <span asp-validation-for="Password"></span>
    </div>
</div>

<div class="form-group row">
    <label asp-for="ConfirmPassword" class="col-sm-2 control-label"></label>
    <div class="col-sm-10 field-group">
        <input type="password" asp-for="ConfirmPassword" class="form-control" placeholder="******" />
        <span asp-validation-for="ConfirmPassword"></span>
    </div>
</div>