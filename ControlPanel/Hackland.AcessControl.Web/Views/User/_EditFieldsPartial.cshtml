@model IUserViewModel

<div class="form-group row">
    <label asp-for="EmailAddress" class="col-sm-2 control-label"></label>
    <div class="col-sm-10 field-group">
        <input type="email" asp-for="EmailAddress" class="form-control" placeholder="name@domain.com" />
        <span asp-validation-for="EmailAddress"></span>
    </div>
</div>

<div class="form-group row">
    <label asp-for="FirstName" class="col-sm-2 control-label"></label>
    <div class="col-sm-10 field-group">
        <input type="text" asp-for="FirstName" class="form-control" placeholder="Frank" />
        <span asp-validation-for="FirstName"></span>
    </div>
</div>

<div class="form-group row">
    <label asp-for="LastName" class="col-sm-2 control-label"></label>
    <div class="col-sm-10 field-group">
        <input type="text" asp-for="LastName" class="form-control" placeholder="Pasta" />
        <span asp-validation-for="LastName"></span>
    </div>
</div>

<div class="form-group row">
    <label asp-for="Phone" class="col-sm-2 control-label"></label>
    <div class="col-sm-10 field-group">
        <input type="text" asp-for="Phone" class="form-control" placeholder="021 xxx xxxx" />
        <span asp-validation-for="Phone"></span>
    </div>
</div>

